<div class="bg-white flex items-center justify-center p-4 sm:p-6 lg:p-8">
  <div class="w-full max-w-sm mx-auto">
    <!-- Form Container -->
    <div class="bg-white border border-gray-300 rounded-xl p-6 shadow-sm">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Create your account</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                class: "w-full px-3 py-2.5 bg-white border border-gray-300 rounded-md text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-black focus:border-black transition-all text-sm" %>
        </div>

        <!-- Password Field -->
        <div x-data="{ showPassword: false }"
             x-on:mouseleave="showPassword = false" >
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="text-xs text-gray-500 mb-1">
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
          <div class="relative">
            <%= f.password_field :password, autocomplete: "new-password",
                  class: "w-full px-3 py-2.5 pr-10 bg-white border border-gray-300 rounded-md text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-black focus:border-black transition-all text-sm",
                  "x-bind:type": "showPassword ? 'text' : 'password'" %>
            <%= tag.button type: "button", 
                    "@click": "showPassword = !showPassword",
                    class: "absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700 focus:outline-none p-1",
                    aria: { label: "Toggle password visibility" } do %>
              <svg x-show="!showPassword" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              <svg x-show="showPassword" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Password Confirmation Field -->
        <div x-data="{ showPasswordConfirm: false }"
             x-on:mouseleave="showPasswordConfirm = false" >
          <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                  class: "w-full px-3 py-2.5 pr-10 bg-white border border-gray-300 rounded-md text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-1 focus:ring-black focus:border-black transition-all text-sm",
                  "x-bind:type": "showPasswordConfirm ? 'text' : 'password'" %>
            <%= tag.button type: "button", 
                    "@click": "showPasswordConfirm = !showPasswordConfirm",
                    class: "absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-700 focus:outline-none p-1",
                    aria: { label: "Toggle password confirmation visibility" } do %>
              <svg x-show="!showPasswordConfirm" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              <svg x-show="showPasswordConfirm" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" style="display: none;">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="pt-3"> <%# Reduced pt-4 to pt-3 %>
          <%= f.submit "Sign up", 
                class: "w-full bg-black text-white py-2.5 px-4 rounded-md font-medium hover:bg-gray-800 transition-colors cursor-pointer text-sm" %> <%# Adjusted padding, rounded, and text size %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6 pt-5 border-t border-gray-200"> <%# Reduced mt-8 to mt-6, pt-6 to pt-5 %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
