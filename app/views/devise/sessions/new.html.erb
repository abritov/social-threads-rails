<div class="bg-white flex items-center justify-center p-4 sm:p-6 lg:p-8">
  <div class="w-full max-w-md mx-auto">
    <!-- Form Container -->
    <div class="bg-white border border-gray-300 rounded-xl p-8 shadow-sm">
      <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%# Display errors (Devise typically handles this via `resource.errors`) %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
                class: "w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition-all" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password",
                class: "w-full px-4 py-3 bg-white border border-gray-300 rounded-lg text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-black focus:border-transparent transition-all" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field flex items-center space-x-2">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-black focus:ring-black border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "text-sm text-gray-900" %>
          </div>
        <% end %>

        <div class="actions pt-4">
          <%= f.submit "Log in",
                class: "w-full bg-black text-white py-3 px-4 rounded-lg font-medium hover:bg-gray-800 transition-colors cursor-pointer text-base" %>
        </div>
      <% end %>

      <!-- Links (Forgot password, Sign up, etc.) -->
      <div class="mt-8 pt-6 border-t border-gray-200">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
