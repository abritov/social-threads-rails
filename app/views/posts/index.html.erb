<% content_for :title, "Posts" %>

<div class="max-w-2xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-3xl text-gray-900">Feed</h1>
    <%= link_to "New Post", new_post_path, class: "rounded-full px-4 py-2 bg-black hover:bg-gray-800 text-white font-medium text-sm transition-colors duration-200 shadow-md" %>
  </div>

  <div id="posts" class="space-y-6">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="relative"> <%# Added relative for the dropdown positioning %>
          <%= render post %>

          <%# Actions Dropdown - Alpine.js for interactivity %>
          <div x-data="{ open: false }" @click.away="open = false" class="absolute top-4 right-4">
            <button @click="open = !open" type="button" class="text-gray-500 hover:text-gray-700 focus:outline-none focus:ring-2 focus:ring-black rounded-full p-1 -m-1">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
              </svg>
            </button>

            <div x-show="open" 
                 x-transition:enter="transition ease-out duration-100"
                 x-transition:enter-start="transform opacity-0 scale-95"
                 x-transition:enter-end="transform opacity-100 scale-100"
                 x-transition:leave="transition ease-in duration-75"
                 x-transition:leave-start="transform opacity-100 scale-100"
                 x-transition:leave-end="transform opacity-0 scale-95"
                 class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10"
                 role="menu" aria-orientation="vertical" aria-labelledby="options-menu">
              <%= link_to "Show", post, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900", role: "menuitem" %>
              <%= link_to "Edit", edit_post_path(post), class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-gray-900", role: "menuitem" %>
              <%= button_to "Delete", post, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 hover:text-red-700", data: { turbo_confirm: "Are you sure you want to delete this post?" }, role: "menuitem" %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10 text-gray-600">No posts yet. Be the first to share your thoughts!</p>
    <% end %>
  </div>
</div>
